<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.libra.mapper.UserMapper">

    <insert id="save">
        insert into library_user(name,username,age,sex,phone)
        values(#{name},#{username},#{age},#{sex},#{phone})
    </insert>

    <select id="list" resultType="com.example.libra.entity.User">
        SELECT * FROM library_user
    </select>

    <select id="listByCondition" resultType="com.example.libra.entity.User">
        SELECT * FROM library_user
            <where>
                <if test="name!=null and name!=''">
                    name like concat('%',#{ name },'%')
                </if>
                <if test="phone!=null and phone!=''">
                    and phone like concat('%',#{ phone },'%')
                </if>
            </where>
    </select>
</mapper>
