<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.libra.mapper.UserMapper">

    <insert id="save">
        insert into library_user(name,librarynumber,age,sex,phone)
        values(#{name},#{librarynumber},#{age},#{sex},#{phone})
    </insert>

    <update id="updatebyId">
        update library_user set name =#{name},age=#{age},sex=#{sex},phone=#{phone} where id=#{id}
    </update>

    <delete id="deletebyId">
        delete from library_user where id = #{id}
    </delete>

    <select id="list" resultType="com.example.libra.entity.User">
        SELECT * FROM library_user
    </select>

    <select id="listByCondition" resultType="com.example.libra.entity.User">
        SELECT * FROM library_user
            <where>
                <if test="name!=null and name!=''">
                    name like concat('%',#{ name },'%')
                </if>
                <if test="phone!=null and phone!=''">
                    and phone like concat('%',#{ phone },'%')
                </if>
            </where>
        order by id desc
    </select>

    <select id="getbyId" resultType="com.example.libra.entity.User">
        select * from library_user where id=#{id}
    </select>
</mapper>
